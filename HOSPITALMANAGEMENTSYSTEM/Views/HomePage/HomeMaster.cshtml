<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/Content/style.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
    <script src='https://kit.fontawesome.com/a076d05399.js' crossorigin='anonymous'></script>
    <style>
        .navbar {
            background: #000000
        }

        .nav-item::after {
            content: '';
            display: block;
            width: 0px;
            height: 2px;
            background-color: white;
            transition: 0.4s
        }

        .nav-item:hover::after {
            width: 100%;
            background-color: white;
        }



        .nav-link {
            padding: 10px 2px;
            transition: 0.2s
        }
    </style>
</head>
<body>
    @*<div style="color:white;background-image:url(/images/lh.jpg);background-repeat:no-repeat;background-size:cover">
            <h1 style="text-align:center">SECRET HEART CONVENT HIGH SCHOOL MANGAD</h1>
        </div>*@
    <div style="width:100%;color:darkblue;font-weight:bold">
        <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
            @*<button class="navbar-toggler" type="button" data-target="#navigation"> <span class="navbar-toggler-icon"></span> </button>*@
            <div class="container-fluid" style="margin-right:70px;width:100%">
                <a class="navbar-brand" href="/HomePage/HomePage">RAJAGIRI SUPER SPECIALITY HOSPITAL</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="nav justify-content-center navbar-nav me-auto mb-2 mb-lg-2  ">
                        <li class="nav-item" style="color:darkblue;margin-left:450px">
                            @*<a href="#home" class="nav-link active" style="color:white">HOME</a>*@
                            <div style="display:flex">
                                <div>
                                    @Html.ActionLink("HOME", "HomePage", "HomePage", new { @class = "nav-link active" })
                                </div>
                                <div>
                                    <i class="bi-house-door-fill" style="color:white;font-size:24px;"></i>
                                </div>
                            </div>

                        </li>

                        <li class="nav-item" style="margin-left:50px">
                            <div style="display:flex">
                                <div>
                                    @Html.ActionLink("ABOUT", "AboutPage", "HomePage", new { @class = "nav-link active" })
                                </div>
                                <div>
                                    <i class='fas fa-address-book' style='font-size:20px;color:white;margin-top:10px'></i>
                                </div>
                            </div>
                        </li>


                        <li class="nav-item" style="margin-left:50px">
                            @*<a href="#facility" class="nav-link active" style="color:white">FACILITY</a>*@
                            <div style="display:flex">
                                <div>
                                    @Html.ActionLink("FACILITY", "FacilityPage", "HomePage", new { @class = "nav-link active" })
                                </div>
                                <div>
                                    <i class="fas fa-handshake" style="color: white; font-size: 24px; margin-top: 10px"></i>
                                </div>
                            </div>

                        </li>




                        <li class="nav-item" style="margin-left:50px">
                            @*<a href="#contact" class="nav-link active" style="color:white">LOGIN</a>*@
                            <div style="display:flex">
                                <div>
                                    @Html.ActionLink("LOGIN", "Login", "HomePage", new { @class = "nav-link active" })
                                </div>
                                <div>
                                    <i class="bi-box-arrow-left" style="color:white;font-size:24px"></i>
                                </div>
                            </div>
                        </li>

                    </ul>

                </div>
            </div>

        </nav>
    </div>


    <div class="container-fluid">
        @RenderBody()
    </div>
    <section class="footer">

        <div class="container" style="margin-top:30px">

            <div class="row">

                <div class="col-md-5" data-aos="fade-right">
                    <a href="#" class="logo"><h2><span>R</span>ajagiri<span> H</span>ospital</h2></a>
                    <p>
                        Rajagiri Hospital is one of the leading subspecialties equipped with highly trained and experienced physicians as well as more advanced technological
                        infrastructure specializing in the treatment and care of infants, children, adolescents and adult women.
                    </p>
                </div>

                <div class="col-md-3 text-center" data-aos="fade-up">
                    <h2>links</h2>
                    <a href="#">home</a>
                    <a href="#">about</a>
                    <a href="#">facility</a>
                    <a href="#">review</a>
                </div>

                <div class="col-md-3 text-center" data-aos="fade-left">
                    <h2>share</h2>
                    <a href="#">facebook</a>
                    <a href="#">twitter</a>
                    <a href="#">instagram</a>
                    <a href="#">github</a>
                </div>

            </div>

        </div>
        <h5 class="credit text-center mx-auto"><span>HospitalPolicy</span><i class='far fa-copyright'></i>2021 | all rights reserved.</h5>


    </section>
</body>
</html>





